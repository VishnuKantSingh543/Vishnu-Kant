<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500&family=Lustria&display=swap" rel="stylesheet">

<section class="v-section" id="v-grid-{{ section.id }}">
  <div class="v-container">
    {% if section.settings.title != blank %}
      <h2 class="v-heading">{{ section.settings.title }}</h2>
    {% endif %}

    <div
      class="v-grid-wrapper"
      style="--desktop-cols: {{ section.settings.items_per_row }}; --mobile-cols: {{ section.settings.items_per_row_mobile }};"
    >
      {% for block in section.blocks %}
        {% assign product = block.settings.product_id %}

        {% if product != blank %}
          <div class="v-card">
            <div class="v-image-container">
              <img src="{{ product.featured_image | img_url: '800x' }}" alt="{{ product.title }}">

              <button
                class="v-hotspot-btn"
                type="button"
                onclick="openVPopup(event, '{{ block.id }}')"
                style="left: {{ block.settings.pos_x }}%; top: {{ block.settings.pos_y }}%;"
              >
                +
              </button>
            </div>

            <script type="application/json" id="v-data-{{ block.id }}">
              {
                "id": {{ product.id | json }},
                "title": {{ product.title | json }},
                "price": {{ product.price | json }},
                "description": {{ product.description | strip_html | json }},
                "featured_image": {{ product.featured_image | img_url: '800x' | json }},
                "variants": {{ product.variants | json }},
                "options": [
                  {% for option in product.options_with_values %}
                    { "name": {{ option.name | json }}, "values": {{ option.values | json }} }{% unless forloop.last %},{% endunless %}
                  {% endfor %}
                ]
              }
            </script>
          </div>

        {% else %}
          <div class="v-card v-placeholder">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {% render 'v-popup' %}
</section>

{% schema %}
{
  "name": "v-product-grid",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "Tisso vision in the wild" },
    {
      "type": "range",
      "id": "items_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Items Per Row (Desktop)",
      "default": 3
    },
    {
      "type": "select",
      "id": "items_per_row_mobile",
      "label": "Items Per Row (Mobile)",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ],
      "default": "2"
    }
  ],
  "blocks": [
    {
      "type": "product_block",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product_id", "label": "Select Product" },
        { "type": "header", "content": "Hotspot Position" },
        { "type": "range", "id": "pos_x", "min": 0, "max": 100, "step": 1, "label": "Left-Right %", "default": 50 },
        { "type": "range", "id": "pos_y", "min": 0, "max": 100, "step": 1, "label": "Up-Down %", "default": 50 }
      ]
    }
  ],
  "presets": [{ "name": "v-product-grid" }]
}
{% endschema %}

<style>
  .v-section,
  .v-section * {
    box-sizing: border-box;
  }
  .v-section {
    padding: 60px 20px;
    font-family: 'Jost', sans-serif;
    background: #fff;
    position: relative;
    z-index: 1;
  }
  .v-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .v-heading {
    font-family: 'Lustria', serif !important;
    font-size: 36px !important;
    color: #000 !important;
    margin-bottom: 40px !important;
    font-weight: 400 !important;
    text-align: center;
  }
  .v-grid-wrapper {
    display: grid;
    grid-template-columns: repeat(var(--desktop-cols), 1fr);
    gap: 30px;
  }
  .v-card {
    position: relative;
    overflow: hidden;
  }
  .v-image-container {
    position: relative;
    line-height: 0;
  }
  .v-image-container img {
    width: 100%;
    height: auto;
    display: block;
  }
  .v-hotspot-btn {
    position: absolute;
    width: 22px !important;
    height: 22px !important;
    background: #fff !important;
    border-radius: 50% !important;
    border: none !important;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    font-weight: bold;
    font-size: 14px;
    color: #000;
    padding: 0;
    transition: transform 0.2s;
    z-index: 2;
    transform: translate(-50%, -50%);
  }
  .v-hotspot-btn:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  @media (max-width: 768px) {
    .v-grid-wrapper {
      grid-template-columns: repeat(var(--mobile-cols), 1fr);
      gap: 15px;
    }
    .v-heading {
      font-size: 24px !important;
    }
  }
</style>